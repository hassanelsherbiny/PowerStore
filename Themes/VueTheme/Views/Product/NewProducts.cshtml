@model IList<ProductOverviewModel>
@inject IPageHeadBuilder pagebuilder
@{
    Layout = "_ColumnsTwo";

    //title
    pagebuilder.AddTitleParts(T("PageTitle.NewProducts").Text);
}
@using Grand.Web.Models.Catalog;
<div class="page recently-added-products-page col-12 px-0">
    <h1 class="h2 generalTitle"><b-button variant="outline-success" size="sm" href="@Url.RouteUrl("NewProductsRSS")" class="link-rss" title="@T("Products.NewProducts.RSS.Hint")">@T("Products.NewProducts.RSS")</b-button> @T("Products.NewProducts")</h1>
    @if (Model.Any())
    {
        <b-form-row class="product-grid">
            @foreach (var product in Model)
            {
                <b-col lg="4" sm="6" cols="6" class="product-container mb-2">
                    <partial name="_ProductBox" model="product" />
                </b-col>
            }
        </b-form-row>
    }
</div>
