@model AddOrderNoteModel
@inject IPageHeadBuilder pagebuilder
@{
    Layout = "_ColumnsOne";

    //title
    pagebuilder.AddTitleParts(T("PageTitle.OrderDetails").Text);
}
<div class="page order-details-page mb-3">
    <h1 class="generalTitle h2 text-center">@T("Order.AddOrdernote")</h1>
    <div class="write-review" id="review-form">
        <form asp-route="AddOrderNote" method="post" v-on:submit.prevent="validateBeforeSubmitParam($event, 'add-review')">
            <input asp-for="OrderId" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="message-error alert alert-info my-3"></div>
            <fieldset>
                <div class="form-fields">
                    <div class="form-group">
                        <label asp-for="Note" class="col-form-label">@T("OrderNote.Fields.Title"):</label>
                        <textarea asp-for="Note" class="form-control review-title"
                                  v-validate="'required'"></textarea>
                        <span class="field-validation-error">{{veeErrors.first('Note')}}</span>
                    </div>
                </div>
            </fieldset>
            <div class="buttons text-left my-3">
                <input type="submit" class="btn btn-info write-product-review-button" value="@T("OrderNote.SubmitButton")" />
            </div>
        </form>
    </div>
</div>